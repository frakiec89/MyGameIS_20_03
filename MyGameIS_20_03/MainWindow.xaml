<Window x:Class="MyGameIS_20_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGameIS_20_03"
        mc:Ignorable="d"
        Title="Симулятор  преподователя программирования"
        Height="450" Width="800">
    <Grid Margin="50">

        <StackPanel>
            <Button Margin="10" Name="btNewGame"
                    MinHeight="100"
                    
                    Click="btNewGame_Click"
                    
                >Начать  новую игру</Button> 
            
            <Button Margin="10" Name="btRunGame"
                    Click="btRunGame_Click"
                    MinHeight="100"
                >Загрузить  игру</Button>
        </StackPanel>
        
        
        
    </Grid>
</Window>
