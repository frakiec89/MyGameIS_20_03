<Window x:Class="MyGameIS_20_03.Forms.RunGameWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGameIS_20_03.Forms"
        mc:Ignorable="d"
        Title="RunGameWindows" Height="450" Width="800">
    <Grid>

        <StackPanel>
            <DataGrid 
                               
                MinHeight="100"
                Name="dtListGame">
            </DataGrid>
            <Button  x:Name="btRunGame"
                     Click="btRunGame_Click"
                     >Загрузить игру</Button>
        </StackPanel>
    </Grid>
</Window>
