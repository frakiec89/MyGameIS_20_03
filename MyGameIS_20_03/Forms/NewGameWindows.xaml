<Window x:Class="MyGameIS_20_03.Forms.NewGameWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGameIS_20_03.Forms"
        mc:Ignorable="d"
        Title="Создание  нового  игрока" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <StackPanel Orientation="Horizontal">

                <Label Margin="5">Укажите имя игрока</Label>

                <TextBox x:Name="tbName" Margin="5"
                         Width="150"
                         ></TextBox>
            </StackPanel>


            <StackPanel Orientation="Horizontal">

                <Label Margin="5">Выберите  предмет </Label>
                <ComboBox  Margin="5" MinWidth="50"  Name="cbSub"></ComboBox>
             
            </StackPanel>


            <StackPanel Orientation="Horizontal">

                <Label Margin="5">Укажите пол игрока </Label>
                <ComboBox  Margin="5" MinWidth="50"  Name="cbGender"></ComboBox>
            </StackPanel>

            <Button x:Name="btCreateGame" Click="btCreateGame_Click">создать</Button>


        </StackPanel>
    </Grid>
</Window>
